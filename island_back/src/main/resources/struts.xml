<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.multipart.maxSize" value="1000000000" />
	<constant name="struts.convention.default.parent.package" value="crud-default" />
	<constant name="struts.convention.package.locators" value="web,front,interfaces,action" />
	<constant name="struts.locale" value="zh_CN " />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	
	
	
	<!-- 用于CRUD Action的parent package -->
	<package name="crud-default" extends="convention-default">
		
		
		
		<!-- 基于paramsPrepareParamsStack,
			增加store interceptor保证actionMessage在redirect后不会丢失 -->

			
		<interceptors>
			<interceptor-stack name="crudStack">
				<interceptor-ref name="store">
					<param name="operationMode">AUTOMATIC</param>
				</interceptor-ref>
				<interceptor-ref name="paramsPrepareParamsStack" />
			</interceptor-stack>
			
			<interceptor name="authInterceptor" class="com.islandback.web.interceptor.LoginInterceptor"></interceptor>
			
			
			
			
			<interceptor-stack name="authStack">
				<interceptor-ref name="authInterceptor"></interceptor-ref>
				<interceptor-ref name="crudStack"></interceptor-ref>
			</interceptor-stack>
		
		</interceptors>
		
		<default-interceptor-ref name="authStack" />
		
		<global-results>
			<result name="login">/common/nologin.jsp</result>
		</global-results>	
		
	   
	   
	        	 	   	 	
	</package>	
	<!-- 
		使用Convention插件,实现约定大于配置的零配置文件风格.
	           特殊的Result路径在Action类中使用@Result设定. 
	-->
</struts>
